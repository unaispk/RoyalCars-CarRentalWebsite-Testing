<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Cross Browser Suite">

	<test thread-count="5" name="Test1">
		<parameter name="browser1" value="firefox"></parameter>
		<classes>
			<class name="CompatibilityTesting.CrossBrowserTest" />
		</classes>
	</test>
	
	
	<test thread-count="5" name="Test2">
		<parameter name="browser1" value="chrome"></parameter>
		<classes>
			<class name="CompatibilityTesting.CrossBrowserTest" />
		</classes>
	</test>
	
	<test thread-count="5" name="Test3">
		<parameter name="browser1" value="edge"></parameter>
		<classes>
			<class name="CompatibilityTesting.CrossBrowserTest" />
		</classes>
	</test>

</suite>
